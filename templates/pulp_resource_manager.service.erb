[Unit]
Description=Pulp Resource Manager
Wants=syslog.service

[Service]
Restart=always
RestartSec=30
TimeoutStartSec=0
TimeoutSec=300
ExecStartPre=-/usr/bin/podman pull quay.io/foreman/pulp-resource-manager:latest
ExecStartPre=-/usr/bin/podman rm "pulp-resource-manager-1"
ExecStart=/usr/bin/podman run --name pulp-resource-manager-1 --net host -v /var/lib/pulp:/var/lib/pulp:Z -v /etc/pulp:/etc/pulp:Z quay.io/foreman/pulp-resource-manager:latest
ExecReload=-/usr/bin/podman stop "pulp-resource-manager-1"
ExecReload=-/usr/bin/podman rm "pulp-resource-manager-1"
ExecStop=-/usr/bin/podman stop "pulp-resource-manager-1"
EnvironmentFile=-/etc/sysconfig/pulp-resource-manager

[Install]
WantedBy=multi-user.target
